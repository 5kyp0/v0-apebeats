# ===========================================
# APEBEATS GENESIS - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.local and fill in your actual values
# ⚠️  NEVER commit .env.local to version control!

# ===========================================
# ENVIRONMENT & DEPLOYMENT
# ===========================================
# Environment mode (development, production, test)
NODE_ENV=development

# ===========================================
# BLOCKCHAIN NETWORKS
# ===========================================
# Curtis Testnet Configuration
NEXT_PUBLIC_CHAIN_ID=33111
NEXT_PUBLIC_RPC_URL=https://curtis.rpc.caldera.xyz/http
NEXT_PUBLIC_EXPLORER_URL=https://curtis.apescan.io

# ApeChain Mainnet Configuration
NEXT_PUBLIC_APECHAIN_CHAIN_ID=33139
NEXT_PUBLIC_APECHAIN_RPC=https://apechain-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
NEXT_PUBLIC_APECHAIN_EXPLORER_URL=https://apescan.io

# ===========================================
# API KEYS & EXTERNAL SERVICES
# ===========================================
# Alchemy API Key for blockchain data
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# ThirdWeb Configuration
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here

# Privy Configuration (for authentication)
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# ===========================================
# SMART CONTRACT ADDRESSES
# ===========================================
# Core ApeBeats Contracts
NEXT_PUBLIC_APEBEATS_GENESIS_ADDRESS=
NEXT_PUBLIC_APEBEATS_METADATA_LIB_ADDRESS=
NEXT_PUBLIC_APEBEATS_ROYALTIES_ADDRESS=
NEXT_PUBLIC_APEBEATS_CONTRACT_ADDRESS=

# Additional Contract Addresses
NEXT_PUBLIC_BATCH_CONTRACT_ADDRESS=
NEXT_PUBLIC_STAKING_CONTRACT_ADDRESS=
NEXT_PUBLIC_POOL_FACTORY_CONTRACT_ADDRESS=
NEXT_PUBLIC_GOVERNANCE_CONTRACT_ADDRESS=
NEXT_PUBLIC_NFT_SHADOW_CONTRACT_ADDRESS=

# ===========================================
# BATCH TRANSFER CONFIGURATION
# ===========================================
# Batch Transfer Contract Settings
NEXT_PUBLIC_BATCH_TRANSFER_ENABLED=true
NEXT_PUBLIC_DEFAULT_FEE_BPS=50
NEXT_PUBLIC_MAX_FEE_BPS=1000
NEXT_PUBLIC_MIN_FEE_WEI=1000000000000000

# Team Management Configuration
NEXT_PUBLIC_TEAM_MANAGEMENT_ENABLED=true
NEXT_PUBLIC_ADMIN_ADDRESSES=
NEXT_PUBLIC_TEAM_ADDRESSES=
NEXT_PUBLIC_FEE_MANAGER_ADDRESSES=

# Leaderboard Configuration
NEXT_PUBLIC_LEADERBOARD_ENABLED=true
NEXT_PUBLIC_LEADERBOARD_REFRESH_INTERVAL=30000
NEXT_PUBLIC_LEADERBOARD_MAX_ENTRIES=100

# Batch Transfer Limits
NEXT_PUBLIC_MAX_RECIPIENTS=100
NEXT_PUBLIC_MAX_TRANSFER_AMOUNT=1000000000000000000000000
NEXT_PUBLIC_MIN_TRANSFER_AMOUNT=1000000000000000

# ===========================================
# WALLET & TREASURY ADDRESSES
# ===========================================
NEXT_PUBLIC_TREASURY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_FOUNDER_ADDRESS=0x0000000000000000000000000000000000000000

# ===========================================
# MERKLE ROOTS (Generated by scripts)
# ===========================================
NEXT_PUBLIC_GTD_MERKLE_ROOT=
NEXT_PUBLIC_FCFS_MERKLE_ROOT=

# ===========================================
# DELEGATE.XYZ INTEGRATION
# ===========================================
NEXT_PUBLIC_DELEGATE_REGISTRY=0x00000000000000447e69651d841bD8D104Bed493

# ===========================================
# NFT CONFIGURATION
# ===========================================
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=
NEXT_PUBLIC_ENABLE_NFT_SNAPSHOTS=true
NEXT_PUBLIC_AUTO_MINT_NFTS=false

# ===========================================
# STORAGE CONFIGURATION
# ===========================================
NEXT_PUBLIC_STORAGE_PROVIDER=ipfs
NEXT_PUBLIC_PIN_TO_IPFS=true
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
NEXT_PUBLIC_ARWEAVE_GATEWAY=https://arweave.net/

# ===========================================
# MUSIC ENGINE CONFIGURATION
# ===========================================
NEXT_PUBLIC_MUSIC_ENGINE_ENABLED=true
NEXT_PUBLIC_STREAMING_ENGINE_ENABLED=true
NEXT_PUBLIC_DEFAULT_MUSIC_STYLE=LoFi
NEXT_PUBLIC_DEFAULT_MUSIC_DURATION=30

# ===========================================
# API CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_BASE_URL=/api

# ===========================================
# FEATURE FLAGS & DEBUGGING
# ===========================================
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_TEST_MODE=true

# ===========================================
# PRIVATE/SENSITIVE VARIABLES (Use .env.local)
# ===========================================
# ⚠️  These should ONLY be in .env.local, never in .env.example
# PRIVATE_KEY=your_private_key_here
# THIRDWEB_SECRET_KEY=your_thirdweb_secret_key_here
# PINATA_API_KEY=your_pinata_api_key_here
# PINATA_SECRET_KEY=your_pinata_secret_key_here
